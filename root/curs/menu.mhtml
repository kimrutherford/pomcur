<%args>
$submitter_email => undef
$submitter_name => undef
</%args>

<div id="menu">
  <ul>
% if (defined $submitter_email) {
    <li>
      <div class="useridentifier"> 
        <div class="email-address"><% $submitter_name %> &lt;<% $submitter_email %>&gt;</div>
        <div class="email-address logged-in-address"> <% $logged_in_username %> </div>
%   if ($show_reassign_button) {
        <button type="button" class="curs-reassign">Reassign paper</button>
%   }
      </div>
    </li>
% }
    <li>
      <& ../login_button.mhtml &>
    </li>
    <li>
      <a href="<% $c->uri_for($c->config()->{help_path}) %>">Help</a>
    </li>
  </ul>
</div>

<%init>
my $logged_in_username = '';
if ($c->user_exists() && $c->user()->role()->name() eq 'admin') {
  $logged_in_username = '(logged in as: ' . $c->user()->email_address() . ')';
}

my $current_path_uri = $c->stash()->{current_path_uri};

my $show_reassign_button = 1;

if ($current_path_uri =~ m:assign_session|session_reassigned:) {
  $show_reassign_button = 0;
}
</%init>
