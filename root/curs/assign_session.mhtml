<%args>
$form
$title
$pub
$reassign
</%args>

<div id="curs-assign-session" class="curs-box">
  <div class="curs-box-title">
<% $title %>
  </div>
  <div class="curs-box-body">
% if ($reassign) {
    <p>Please enter name and email address of the person you wish to assign
    this paper to.</p>
    <p>This person will receive an email with the link to the entry page to
    curate the paper.</p>
% } else {
    <p>Before you start curating, Please confirm your name and email address:</p>
% }
    <% $form |n %>
  </div>
</div>
